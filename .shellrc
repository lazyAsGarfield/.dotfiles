alias_if_needed()
{
  gcmd="g$1"
  path_to="$(which $gcmd)"
  if [[ ! -x "$path_to" ]]; then
    alias $gcmd=$1
  fi
}

alias_if_needed ls
alias_if_needed "awk"
alias_if_needed sed
alias_if_needed timeout
alias_if_needed wc
